<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DatePicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">calendar</item>
        <item name="android:background">@drawable/header</item>
        <item name="android:headerBackground">@drawable/header</item>
        <item name="android:headerMonthTextAppearance">@style/CustomDatePickerTextAppearance</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/CustomDatePickerTextAppearance</item>
        <item name="android:yearListItemTextAppearance">@style/CustomDatePickerTextAppearance</item>
        <item name="android:yearListSelectorColor">@color/GreenYellow</item>
    </style>
    <style name="CustomDatePickerTextAppearance" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>